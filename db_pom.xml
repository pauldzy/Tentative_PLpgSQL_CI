<?xml version="1.0" encoding="UTF-8"?>
<project
   xmlns="http://maven.apache.org/POM/4.0.0"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd"
>
   <modelVersion>4.0.0</modelVersion>
   <name>NHDPLUSinPG_DB Build Test</name>
   <groupId>dz_builder</groupId>
   <artifactId>dz_db_builder</artifactId>
   <version>1.0</version>
   <packaging>jar</packaging>
   <description>Automated build/testing of PLpgSQL</description>
   <properties>
      <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
      <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
   </properties>
   <pluginRepositories>
      <pluginRepository>
         <id>croche-releases</id>
         <url>http://croche.googlecode.com/svn/repository/releases</url>
      </pluginRepository>
   </pluginRepositories>
   <build>
      <plugins>
         <plugin>
           <groupId>org.codehaus.mojo</groupId>
           <artifactId>properties-maven-plugin</artifactId>
           <version>1.0-alpha-2</version>
           <executions>
             <execution>
               <phase>initialize</phase>
               <goals>
                 <goal>read-project-properties</goal>
               </goals>
               <configuration>
                 <files>
                   <file>/var/lib/jenkins/psql.properties</file>
                 </files>
               </configuration>
             </execution>
           </executions>
         </plugin>
         <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>sql-maven-plugin</artifactId>
            <version>1.5</version>
            <dependencies>
               <dependency>
                  <groupId>org.postgresql</groupId>
                  <artifactId>postgresql</artifactId>
                  <version>9.4-1206.jdbc42</version>
               </dependency>
            </dependencies>
            <configuration>
               <driver>org.postgresql.Driver</driver>
               <url>jdbc:postgresql://${PGSQL_HOST}:${PGSQL_PORT}/${PGSQL_DATABASE}</url>
               <username>${dz.superuser}</username>
               <password>${dz.superpass}</password>
            </configuration>
            <executions>
               <execution>
                  <id>testing_setup</id>
                  <phase>generate-sources</phase>
                  <goals>
                     <goal>execute</goal>
                  </goals>
                  <configuration>
                     <delimiter>row</delimiter>
                     <autocommit>true</autocommit>
                     <srcFiles>
                        <srcFile>tfs/database_setup.sql</srcFile>
                     </srcFiles>
                  </configuration>
               </execution>
            </executions>
         </plugin>
         <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>exec-maven-plugin</artifactId>
            <version>1.2.1</version>
            <executions>
               <execution>
                  <id>load_dump</id>
                  <phase>compile</phase>
                  <goals>
                     <goal>exec</goal>
                  </goals>
                  <configuration>
                     <executable>/usr/bin/pg_restore</executable>
                     <environmentVariables>
                        <PGPASSWORD>${dz.superpass}</PGPASSWORD>
                     </environmentVariables>
                     <arguments>
                        <argument>-U</argument>
                        <argument>${dz.superuser}</argument>
                        <argument>-h</argument>
                        <argument>${PGSQL_HOST}</argument>
                        <argument>-p</argument>
                        <argument>${PGSQL_PORT}</argument>
                        <argument>-d</argument>
                        <argument>${PGSQL_DATABASE}</argument>
                        <argument>${dz.nhdplus_dumpfile}</argument>
                     </arguments>
                     <successCodes>
                        <successCode>1</successCode>
                        <successCode>2305</successCode>
                     </successCodes> 
                  </configuration>
               </execution>
               <execution>
                  <id>write_creds</id>
                  <phase>compile</phase>
                  <goals>
                     <goal>exec</goal>
                  </goals>
                  <configuration>
                     <executable>dzecho.sh</executable>
                     <arguments>
                        <argument>jenkins_nhdplus_credentials.txt</argument>
                        <argument>nhdplus.username=${PGSQL_USER}</argument>
                        <argument>nhdplus.password=${PGSQL_PASSWORD}</argument>
                        <argument>nhdplus.superuser=${dz.superuser}</argument>
                        <argument>nhdplus.superpass=${dz.superpass}</argument>
                        <argument>nhdplus.host=${PGSQL_HOST}</argument>
                        <argument>nhdplus.port=${PGSQL_PORT}</argument>
                        <argument>nhdplus.database=${PGSQL_DATABASE}</argument>
                     </arguments> 
                  </configuration>
               </execution>
            </executions>
         </plugin>
      </plugins>
   </build>
</project>
